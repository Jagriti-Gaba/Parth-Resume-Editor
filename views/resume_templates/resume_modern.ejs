<body>
    <% if (resumeData.profileImage) { %>
    <div class="profile-image-container">
      <img src="<%= resumeData.profileImage %>" alt="Profile Photo" class="profile-image">
    </div>
  <% } %>
  <div class="name" contenteditable="true"><%= resumeData.name %></div>
  <header>
    <h1 contenteditable="true"><%= resumeData.name %></h1>
    <p contenteditable="true"><%= resumeData.phone %> | <%= resumeData.email %></p>
  </header>

  <section>
    <h2 class="section-title" contenteditable="true">Education</h2>
    <% resumeData.education.forEach(edu => { %>
      <div class="details section" style="margin-bottom: 15px;">
        <button class="delete-section-btn" title="Delete section"><i class="fas fa-times"></i></button>
        <strong contenteditable="true"><%= edu.degree %></strong>, <em contenteditable="true"><%= edu.school %></em> (<span contenteditable="true"><%= edu.date %></span>)
        <br/>
        Major: <span contenteditable="true"><%= edu.major %></span>
      </div>
    <% }) %>
  </section>

  <section>
    <h2 class="section-title" contenteditable="true">Experience</h2>
    <% resumeData.experience.forEach(exp => { %>
      <div class="details section" style="margin-bottom: 20px;">
        <button class="delete-section-btn" title="Delete section"><i class="fas fa-times"></i></button>
        <strong contenteditable="true"><%= exp.position %></strong> @ <span contenteditable="true"><%= exp.company %></span> (<span contenteditable="true"><%= exp.date %></span>)
        <ul>
          <% exp.responsibilities.forEach(item => { %>
            <li contenteditable="true"><%= item %></li>
          <% }); %>
        </ul>
      </div>
    <% }) %>
  </section>

  <section>
    <h2 class="section-title" contenteditable="true">Skills</h2>
    <% for (const category in resumeData.skills) { %>
      <p class="section" style="position: relative; margin-bottom:10px;">
        <button class="delete-section-btn" title="Delete section"><i class="fas fa-times"></i></button>
        <strong contenteditable="true"><%= category %>:</strong>
        <span contenteditable="true"><%= resumeData.skills[category].join(", ") %></span>
      </p>
    <% } %>
  </section>

  <section>
    <h2 class="section-title" contenteditable="true">Projects</h2>
    <% resumeData.projects.forEach(proj => { %>
      <div class="details section" style="margin-bottom: 20px;">
        <button class="delete-section-btn" title="Delete section"><i class="fas fa-times"></i></button>
        <strong contenteditable="true"><%= proj.name %></strong> (<span contenteditable="true"><%= proj.date %></span>)
        <br/>
        Technologies: <span contenteditable="true"><%= proj.technologies %></span>
        <ul>
          <% proj.details.forEach(detail => { %>
            <li contenteditable="true"><%= detail %></li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </section>

  <section>
    <h2 class="section-title" contenteditable="true">Achievements</h2>
    <ul>
      <% resumeData.achievements.forEach(ach => { %>
        <li contenteditable="true"><%= ach %></li>
      <% }) %>
    </ul>
  </section>

  <script src="/js/main.js"></script>
