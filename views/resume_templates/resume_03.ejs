<div class="resume-template blue-modern" style="font-family:'Inter',sans-serif; max-width:820px; margin:0 auto; background:#eef4fa; border-radius:18px; box-shadow:0 0 10px #0002; display:flex;">

  <!-- Left Sidebar / Photo & Contacts -->
  <div style="width:280px; background:#ffffff; border-radius:18px 0 0 18px; padding:38px 24px; color:#214072; display:flex; flex-direction:column; align-items:center;">
    <% if (resumeData.profilePic) { %>
  <img src="<%= resumeData.profilePic %>" alt="Profile Photo"
    style="width:120px; height:120px; object-fit:cover; border-radius:50%; margin:0 auto 25px; display:block; border:4px solid #ecf0f1;">
<% } %>
    
    <div style="width:100%; margin-bottom:26px;">
      <h2 contenteditable="true" style="font-size:2rem; font-weight:700; margin-bottom:2px; color:#173466;">
        <%= resumeData.name || 'Your Name' %>
      </h2>
      <div contenteditable="true" style="font-size:1.1rem; color:#336495;">
        <%= resumeData.field || 'Your Profession' %>
      </div>
    </div>

    <div style="width:100%; margin-bottom:26px;">
      <h3 style="font-size:1.06rem; font-weight:600; color:#214072; margin-bottom:6px;">Contact Me</h3>
      <% if (resumeData.phone) { %>
        <div style="display:flex; align-items:center; gap:7px; font-size:0.98rem; margin-bottom:6px;">
          <i class="fas fa-phone-alt" style="color:#336495;"></i>
          <span contenteditable="true"><%= resumeData.phone %></span>
        </div>
      <% } %>
      <% if (resumeData.email) { %>
        <div style="display:flex; align-items:center; gap:7px; font-size:0.98rem; margin-bottom:6px;">
          <i class="fas fa-envelope" style="color:#336495;"></i>
          <span contenteditable="true"><%= resumeData.email %></span>
        </div>
      <% } %>
      <% if (resumeData.address) { %>
        <div style="display:flex; align-items:center; gap:7px; font-size:0.98rem;">
          <i class="fas fa-map-marker-alt" style="color:#336495;"></i>
          <span contenteditable="true"><%= resumeData.address %></span>
        </div>
      <% } %>
      <% if (resumeData.linkedin) { %>
        <div style="display:flex; align-items:center; gap:7px; font-size:0.98rem; margin-top:6px;">
          <i class="fab fa-linkedin" style="color:#336495;"></i>
          <span contenteditable="true"><%= resumeData.linkedin %></span>
        </div>
      <% } %>
      <% if (resumeData.github) { %>
        <div style="display:flex; align-items:center; gap:7px; font-size:0.98rem; margin-top:6px;">
          <i class="fab fa-github" style="color:#336495;"></i>
          <span contenteditable="true"><%= resumeData.github %></span>
        </div>
      <% } %>
    </div>

    <% if (resumeData.languages && resumeData.languages.length > 0) { %>
      <div style="width:100%; margin-bottom:26px;">
        <h3 style="font-size:1.06rem; font-weight:600; color:#214072; margin-bottom:9px;">Languages</h3>
        <div contenteditable="true" style="color:#336495;">
          <%= resumeData.languages.join(', ') %>
        </div>
      </div>
    <% } %>

    <% if (resumeData.achievements && resumeData.achievements.length > 0) { %>
      <div style="width:100%;">
        <h3 style="font-size:1.06rem; font-weight:600; color:#214072; margin-bottom:9px;">Achievements</h3>
        <ul style="color:#336495; padding-left:18px; margin-top:0;">
          <% resumeData.achievements.forEach(achievement => { %>
            <li contenteditable="true" style="margin-bottom:6px; font-size:0.95rem;"><%= achievement %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
  </div>

  <!-- Main Column -->
  <div style="flex:1; padding:38px 34px 38px 38px; background:#eef4fa;">
    
    <% if (resumeData.profile) { %>
      <div style="margin-bottom:22px;">
        <h3 style="font-weight:700; color:#214072; font-size:1.07em; margin-bottom:9px;">Profile</h3>
        <div contenteditable="true" style="color:#23508b; font-size:1rem; line-height:1.55;">
          <%= resumeData.profile %>
        </div>
      </div>
    <% } %>

    <% if (resumeData.education && resumeData.education.length > 0) { %>
      <div style="margin-bottom:22px;">
        <h3 style="font-weight:700; color:#214072; font-size:1.07em; margin-bottom:10px;">Education</h3>
        <% resumeData.education.forEach(edu => { %>
          <div style="margin-bottom:10px;">
            <div contenteditable="true" style="font-weight:600; color:#173466;">
              <%= edu.school || 'Institution Name' %>
            </div>
            <% if(edu.degree){ %>
              <div contenteditable="true" style="color:#336495;"><%= edu.degree %></div>
            <% } %>
            <% if(edu.major){ %>
              <div contenteditable="true" style="color:#336495; font-size:0.95em;"><%= edu.major %></div>
            <% } %>
            <% if(edu.date){ %>
              <div contenteditable="true" style="font-size:0.95em; color:#99b6da;"><%= edu.date %></div>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } %>

    <% if (resumeData.experience && resumeData.experience.length > 0) { %>
      <div style="margin-bottom:22px;">
        <h3 style="font-weight:700; color:#214072; font-size:1.07em; margin-bottom:10px;">Work Experience</h3>
        <% resumeData.experience.forEach(exp => { %>
          <div style="margin-bottom:13px;">
            <div style="font-size:1em; font-weight:600; color:#173466;">
              <span contenteditable="true"><%= exp.company || 'Company' %></span>
              <% if (exp.position) { %>
                <span style="color:#4d79c9;"> — </span>
                <span contenteditable="true" style="color:#4d79c9;"><%= exp.position %></span>
              <% } %>
              <% if (exp.date) { %>
                <span contenteditable="true" style="color:#99b6da; float:right; font-weight:400;"><%= exp.date %></span>
              <% } %>
            </div>
            <% if (exp.responsibilities && exp.responsibilities.length > 0) { %>
              <ul style="margin:6px 0 0 18px; color:#23508b; font-size:0.97em;">
                <% exp.responsibilities.forEach(r => { %>
                  <li contenteditable="true"><%= r || '' %></li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } %>

    <% if (resumeData.projects && resumeData.projects.length > 0) { %>
      <div style="margin-bottom:22px;">
        <h3 style="font-weight:700; color:#214072; font-size:1.07em; margin-bottom:10px;">Projects</h3>
        <% resumeData.projects.forEach(project => { %>
          <div style="margin-bottom:13px;">
            <div style="font-size:1em; font-weight:600; color:#173466;">
              <span contenteditable="true"><%= project.name || 'Project Name' %></span>
              <% if (project.link) { %>
                <a href="<%= project.link %>" style="color:#4d79c9; text-decoration:none;"> — View Project</a>
              <% } %>
              <% if (project.date) { %>
                <span contenteditable="true" style="color:#99b6da; float:right; font-weight:400;"><%= project.date %></span>
              <% } %>
            </div>
            <% if (project.technologies) { %>
              <div contenteditable="true" style="color:#336495; font-size:0.95em; margin:3px 0;">
                <%= project.technologies %>
              </div>
            <% } %>
            <% if (project.details && project.details.length > 0) { %>
              <ul style="margin:6px 0 0 18px; color:#23508b; font-size:0.97em;">
                <% project.details.forEach(detail => { %>
                  <li contenteditable="true"><%= detail || '' %></li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } %>

    <% if (resumeData.skills && Object.keys(resumeData.skills).length > 0) { %>
      <div style="margin-bottom:22px;">
        <h3 style="font-weight:700; color:#214072; font-size:1.07em; margin-bottom:9px;">Skills</h3>
        <% Object.entries(resumeData.skills).forEach(([category, skills]) => { %>
          <% if (skills && skills.length > 0) { %>
            <div style="padding-bottom:3px;">
              <span contenteditable="true" style="font-weight:600; color:#336495;"><%= category %>:</span>
              <span contenteditable="true" style="color:#23508b;"> <%= skills.join(', ') %></span>
            </div>
          <% } %>
        <% }); %>
      </div>
    <% } %>
  </div>
</div>