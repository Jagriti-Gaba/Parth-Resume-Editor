<div class="resume-template modern-clean" style="font-family:'Inter',sans-serif; max-width:800px; margin:0 auto; background:#fff; border-radius:8px; box-shadow:0 0 15px rgba(0,0,0,0.1); display:flex; position:relative; overflow:hidden;">
  <!-- Logo Watermark -->
  <img src="/maimt-logo.png"
     alt="Institute Logo"
     style="position:absolute;background-color: transparent; left:50%; top:50%; width:320px; min-width:250px; opacity:0.1; z-index:1; transform:translate(-50%,-50%); pointer-events:none; user-select:none;" />
  
  <!-- Left Sidebar -->
  <div style="width:35%; background:#2c3e50; border-radius:8px 0 0 8px; padding:30px 20px; color:#ecf0f1; z-index:1; display:flex; flex-direction:column;">
    <% if (resumeData.profilePic) { %>
      <img src="<%= resumeData.profilePic %>" alt="Profile"
           style="width:100px;height:100px;object-fit:cover;border-radius:50%;margin:0 auto 25px  auto; display:block; border:4px solid #ecf0f1;">
    <% } %>

    <!-- Name and Title -->
    <div style="text-align:center; margin-bottom:32px;">
      <h2 contenteditable="true" style="font-size:1.7rem; font-weight:700; margin-bottom:2px; color:#fff; letter-spacing:0.03em;">
        <%= resumeData.name || 'Your Name' %>
      </h2>
      <div contenteditable="true" style="font-size:1.03rem; color:#bdc3c7; padding-bottom:14px; border-bottom:1px solid #34495e;">
        <%= resumeData.title || 'Your Profession' %>
      </div>
    </div>
    <!-- Contact Details -->
    <div style="margin-bottom:28px;">
      <h3 contenteditable="true" style="font-size:1.09rem; font-weight:600; color:#ecf0f1; margin-bottom:13px; border-bottom:1px solid #34495e;">Contact Details</h3>
      <div style="display:flex; align-items:center; gap:8px; font-size:0.97rem; margin-bottom:10px;">
        <i class="fas fa-phone-alt" style="color:#bdc3c7;"></i>
        <span contenteditable="true"><%= resumeData.phone || '+123-456-7890' %></span>
      </div>
      <div style="display:flex; align-items:center; gap:8px; font-size:0.97rem; margin-bottom:10px;">
        <i class="fas fa-envelope" style="color:#bdc3c7;"></i>
        <span contenteditable="true"><%= resumeData.email || 'your.email@example.com' %></span>
      </div>
      <div style="display:flex; align-items:center; gap:8px; font-size:0.97rem; margin-bottom:10px;">
        <i class="fas fa-map-marker-alt" style="color:#bdc3c7;"></i>
        <span contenteditable="true"><%= resumeData.address || 'Your Address, City' %></span>
      </div>
      <div style="display:flex; align-items:center; gap:8px; font-size:0.97rem; margin-bottom:10px;">
        <i class="fab fa-linkedin" style="color:#bdc3c7;"></i>
        <span contenteditable="true"><%= resumeData.linkedin || 'linkedin.com/in/yourprofile' %></span>
      </div>
      <div style="display:flex; align-items:center; gap:8px; font-size:0.97rem; margin-bottom:10px;">
        <i class="fab fa-github" style="color:#bdc3c7;"></i>
        <span contenteditable="true"><%= resumeData.github || 'github.com/yourgithub' %></span>
      </div>
    </div>
    <!-- Skills -->
    <div style="margin-bottom:25px;">
      <h3 contenteditable="true" style="font-size:1.09rem; font-weight:600; color:#ecf0f1; margin-bottom:13px; border-bottom:1px solid #34495e;">Skills</h3>
      <ul style="list-style:none; padding:0;">
        <% (resumeData.skills || ['Front-end development','Backend development','DBMS','Java/C','Effective communication','Creativity','Problem Solving']).forEach(skill=> { %>
          <li contenteditable="true" style="font-size:0.97rem; color:#bdc3c7; margin-bottom:8px;"><i class="fas fa-circle" style="font-size:0.6em;margin-right:7px;vertical-align:middle;"></i> <%= skill %></li>
        <% }); %>
      </ul>
    </div>
    <!-- Languages -->
    <div style="margin-bottom:25px;">
      <h3 contenteditable="true" style="font-size:1.09rem; font-weight:600; color:#ecf0f1; margin-bottom:13px; border-bottom:1px solid #34495e;">Languages</h3>
      <div contenteditable="true" style="font-size:0.97rem; color:#bdc3c7;">
        <%= (resumeData.languages && resumeData.languages.join(', ')) || 'English, Hindi, Punjabi' %>
      </div>
    </div>
    <!-- Hobbies -->
    <div>
      <h3 contenteditable="true" style="font-size:1.09rem; font-weight:600; color:#ecf0f1; margin-bottom:13px; border-bottom:1px solid #34495e;">Hobbies</h3>
      <ul style="list-style:none; padding:0;">
        <% (resumeData.hobbies || ['Painting and Sketching', 'Health and Fitness']).forEach(hobby=> { %>
        <li contenteditable="true" style="font-size:0.97rem; color:#bdc3c7; margin-bottom:8px;"><i class="fas fa-star" style="font-size:0.7em;margin-right:7px;vertical-align:middle;"></i> <%= hobby %></li>
        <% }); %>
      </ul>
    </div>
  </div>
  <!-- Main Content -->
  <div style="flex:1; padding:36px 32px 24px 32px; background:#fff; color:#2c3e50; z-index:1;">
    <!-- Career Objective -->
    <div style="margin-bottom:24px;">
        
      <h3 contenteditable="true" style="font-weight:700;color:#2c3e50; font-size:1.18rem; border-bottom:1px solid #ecf0f1; padding-bottom:3px; margin-bottom:7px;">Career Objective</h3>
      <div contenteditable="true" style="font-size:1rem; color:#34495e;">
        <%= resumeData.objective || 'Professional summary highlighting your experience, skills, and career objectives. Keep it concise.' %>
      </div>
    </div>
    <!-- Projects -->
    <div style="margin-bottom:24px;">
      <h3 contenteditable="true" style="font-weight:700;color:#2c3e50; font-size:1.18rem; border-bottom:1px solid #ecf0f1; padding-bottom:3px; margin-bottom:7px;">Projects</h3>
      <% (resumeData.projects || []).slice(0,2).forEach(project => { %>
        <div style="margin-bottom:15px;">
          <div style="display:flex; align-items:center; gap:8px;">
            <i class="fas fa-check-circle" style="font-size:1.08em; color:#218c74;"></i>
            
            <span contenteditable="true" style="font-size:1.07rem; font-weight:600; color:#2c3e50;"><%= project.name %></span>
          </div>
          <div contenteditable="true" style="font-size:0.97rem; color:#7f8c8d; margin-bottom:3px;">
            <%= project.techStack || '' %>
          </div>
          <div contenteditable="true" style="font-size:0.96rem; color:#34495e;">
            <%= project.description %>
          </div>
        </div>
      <% }) %>
      <% if (!resumeData.projects || resumeData.projects.length < 2) { %>
        <div style="margin-bottom:15px;">
          <div style="display:flex; align-items:center; gap:8px;">
         <span contenteditable="true" style="font-size:1.07rem; font-weight:600; color:#2c3e50;">Project Name</span>
          </div>
          <div contenteditable="true" style="font-size:0.97rem; color:#7f8c8d; margin-bottom:3px;">
            Tools/Technologies
          </div>
          <div contenteditable="true" style="font-size:0.96rem; color:#34495e;">
            Project description goes here.
          </div>
        </div>
      <% } %>
    </div>
    <!-- Education -->
    <div style="margin-bottom:24px;">
      <h3 contenteditable="true" style="font-weight:700;color:#2c3e50; font-size:1.18rem; border-bottom:1px solid #ecf0f1; padding-bottom:3px; margin-bottom:7px;">Education</h3>
      <% (resumeData.education || []).forEach(edu => { %>
        <div style="margin-bottom:12px;">
          <div style="display:flex; justify-content:space-between;">
            <div contenteditable="true" style="font-size:1.01rem; font-weight:600;"><%= edu.school %></div>
            <div contenteditable="true" style="font-size:0.95rem; color:#7f8c8d;"><%= edu.duration %></div>
          </div>
          <div contenteditable="true" style="color:#3498db; font-size:1.01rem; font-weight:600;"><%= edu.degree %></div>
          <div contenteditable="true" style="color:#34495e; font-size:0.97rem;"><%= edu.details %></div>
        </div>
      <% }) %>
    </div>
    <!-- Achievements -->
    <% if (resumeData.achievements && resumeData.achievements.length > 0) { %>
    <div>
      <h3 contenteditable="true" style="font-weight:700;color:#2c3e50; font-size:1.18rem; border-bottom:1px solid #ecf0f1; padding-bottom:3px; margin-bottom:7px;">Achievements</h3>
      <ul style="margin:0 0 0 18px; color:#34495e; font-size:0.99rem;">
        <% resumeData.achievements.forEach(a=> { %>
          <li contenteditable="true" style="margin-bottom:7px;"><%= a %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>
  </div>
</div>
