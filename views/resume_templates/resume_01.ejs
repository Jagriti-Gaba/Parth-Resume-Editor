<div class="resume-template modern-clean" style="font-family:'Inter',sans-serif; max-width:800px; margin:0 auto; background:#ffffff; border-radius:8px; box-shadow:0 0 15px rgba(0,0,0,0.1); display:flex;">

  <!-- Left Sidebar - Personal Info -->
  <div style="width:35%; background:#2c3e50; border-radius:8px 0 0 8px; padding:30px 20px; color:#ecf0f1;">
   <% if (resumeData.profilePic) { %>
  <img src="<%= resumeData.profilePic %>" alt="Profile Photo"
    style="width:120px; height:120px; object-fit:cover; border-radius:50%; margin:0 auto 25px; display:block; border:4px solid #ecf0f1;">
<% } %>

    
    <div style="width:100%; margin-bottom:25px; text-align:center;">
      <h2 contenteditable="true" style="font-size:1.8rem; font-weight:700; margin-bottom:5px; color:#ffffff;">
        <%= resumeData.name || 'Your Name' %>
      </h2>
      <div contenteditable="true" style="font-size:1rem; color:#bdc3c7; padding-bottom:15px; border-bottom:1px solid #34495e;">
        <%= resumeData.field || 'Your Profession' %>
      </div>
    </div>

    <div style="width:100%; margin-bottom:25px;">
      <h3 contenteditable="true" style="font-size:1.1rem; font-weight:600; color:#ecf0f1; margin-bottom:12px; padding-bottom:5px; border-bottom:1px solid #34495e;">CONTACT</h3>
      <% if (resumeData.phone) { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fas fa-phone-alt" style="color:#bdc3c7;"></i>
          <span contenteditable="true"><%= resumeData.phone %></span>
        </div>
      <% } else { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fas fa-phone-alt" style="color:#bdc3c7;"></i>
          <span contenteditable="true">+123-456-7890</span>
        </div>
      <% } %>
      
      <% if (resumeData.email) { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fas fa-envelope" style="color:#bdc3c7;"></i>
          <span contenteditable="true"><%= resumeData.email %></span>
        </div>
      <% } else { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fas fa-envelope" style="color:#bdc3c7;"></i>
          <span contenteditable="true">your.email@example.com</span>
        </div>
      <% } %>
      
      <% if (resumeData.address) { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fas fa-map-marker-alt" style="color:#bdc3c7;"></i>
          <span contenteditable="true"><%= resumeData.address %></span>
        </div>
      <% } else { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fas fa-map-marker-alt" style="color:#bdc3c7;"></i>
          <span contenteditable="true">123 Anywhere St, City</span>
        </div>
      <% } %>
      
      <% if (resumeData.linkedin) { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fab fa-linkedin" style="color:#bdc3c7;"></i>
          <span contenteditable="true"><%= resumeData.linkedin %></span>
        </div>
      <% } else { %>
        <div style="display:flex; align-items:center; gap:8px; font-size:0.9rem; margin-bottom:10px;">
          <i class="fab fa-linkedin" style="color:#bdc3c7;"></i>
          <span contenteditable="true">linkedin.com/in/yourprofile</span>
        </div>
      <% } %>
    </div>

    <% if (resumeData.skills && Object.keys(resumeData.skills).length > 0) { %>
      <div style="width:100%; margin-bottom:25px;">
        <h3 contenteditable="true" style="font-size:1.1rem; font-weight:600; color:#ecf0f1; margin-bottom:12px; padding-bottom:5px; border-bottom:1px solid #34495e;">SKILLS</h3>
        <div style="display:grid; grid-template-columns:1fr 1fr; gap:8px;">
          <% if (resumeData.skills.Professional && resumeData.skills.Professional.length > 0) { %>
            <% resumeData.skills.Professional.forEach(skill => { %>
              <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">
                • <%= skill %>
              </div>
            <% }); %>
          <% } else { %>
            <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Leadership</div>
            <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Communication</div>
            <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Teamwork</div>
            <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Problem Solving</div>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <div style="width:100%; margin-bottom:25px;">
        <h3 contenteditable="true" style="font-size:1.1rem; font-weight:600; color:#ecf0f1; margin-bottom:12px; padding-bottom:5px; border-bottom:1px solid #34495e;">SKILLS</h3>
        <div style="display:grid; grid-template-columns:1fr 1fr; gap:8px;">
          <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Leadership</div>
          <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Communication</div>
          <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Teamwork</div>
          <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">• Problem Solving</div>
        </div>
      </div>
    <% } %>

    <% if (resumeData.languages && resumeData.languages.length > 0) { %>
      <div style="width:100%; margin-bottom:25px;">
        <h3 contenteditable="true" style="font-size:1.1rem; font-weight:600; color:#ecf0f1; margin-bottom:12px; padding-bottom:5px; border-bottom:1px solid #34495e;">LANGUAGES</h3>
        <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">
          <%= resumeData.languages.join(', ') %>
        </div>
      </div>
    <% } else { %>
      <div style="width:100%; margin-bottom:25px;">
        <h3 contenteditable="true" style="font-size:1.1rem; font-weight:600; color:#ecf0f1; margin-bottom:12px; padding-bottom:5px; border-bottom:1px solid #34495e;">LANGUAGES</h3>
        <div contenteditable="true" style="font-size:0.9rem; color:#bdc3c7;">
          English, Spanish, French
        </div>
      </div>
    <% } %>

    <% if (resumeData.references && resumeData.references.length > 0) { %>
      <div style="width:100%;">
        <h3 contenteditable="true" style="font-size:1.1rem; font-weight:600; color:#ecf0f1; margin-bottom:12px; padding-bottom:5px; border-bottom:1px solid #34495e;">REFERENCES</h3>
        <% resumeData.references.forEach(ref => { %>
          <div style="margin-bottom:15px;">
            <div contenteditable="true" style="font-weight:600; font-size:0.95rem; color:#ecf0f1;"><%= ref.name %></div>
            <div contenteditable="true" style="font-size:0.85rem; color:#bdc3c7;"><%= ref.position %></div>
            <% if (ref.phone) { %>
              <div style="display:flex; align-items:center; gap:5px; font-size:0.8rem; color:#bdc3c7; margin-top:3px;">
                <i class="fas fa-phone-alt"></i>
                <span contenteditable="true"><%= ref.phone %></span>
              </div>
            <% } %>
            <% if (ref.social) { %>
              <div style="display:flex; align-items:center; gap:5px; font-size:0.8rem; color:#bdc3c7; margin-top:3px;">
                <i class="fas fa-at"></i>
                <span contenteditable="true"><%= ref.social %></span>
              </div>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div style="width:100%;">
        <h3 contenteditable="true" style="font-size:1.1rem; font-weight:600; color:#ecf0f1; margin-bottom:12px; padding-bottom:5px; border-bottom:1px solid #34495e;">REFERENCES</h3>
        <div style="margin-bottom:15px;">
          <div contenteditable="true" style="font-weight:600; font-size:0.95rem; color:#ecf0f1;">Reference Name</div>
          <div contenteditable="true" style="font-size:0.85rem; color:#bdc3c7;">Their Position</div>
          <div style="display:flex; align-items:center; gap:5px; font-size:0.8rem; color:#bdc3c7; margin-top:3px;">
            <i class="fas fa-phone-alt"></i>
            <span contenteditable="true">123-456-7890</span>
          </div>
          <div style="display:flex; align-items:center; gap:5px; font-size:0.8rem; color:#bdc3c7; margin-top:3px;">
            <i class="fas fa-at"></i>
            <span contenteditable="true">@theirprofile</span>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Main Content - Professional Info -->
  <div style="flex:1; padding:30px; background:#ffffff; color:#2c3e50;">
    <% if (resumeData.profile) { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:10px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">ABOUT ME</h3>
        <div contenteditable="true" style="color:#34495e; font-size:0.95rem; line-height:1.6;">
          <%= resumeData.profile || 'Professional summary highlighting your experience, skills, and career objectives. Keep it concise (3-5 sentences).' %>
        </div>
      </div>
    <% } else { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:10px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">ABOUT ME</h3>
        <div contenteditable="true" style="color:#34495e; font-size:0.95rem; line-height:1.6;">
          Professional summary highlighting your experience, skills, and career objectives. Keep it concise (3-5 sentences).
        </div>
      </div>
    <% } %>

    <% if (resumeData.experience && resumeData.experience.length > 0) { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">EXPERIENCE</h3>
        <% resumeData.experience.forEach(exp => { %>
          <div style="margin-bottom:20px;">
            <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
              <div contenteditable="true" style="font-weight:600; font-size:1rem; color:#2c3e50;"><%= exp.company %></div>
              <div contenteditable="true" style="font-size:0.9rem; color:#7f8c8d;"><%= exp.date %></div>
            </div>
            <div contenteditable="true" style="font-weight:600; font-size:0.95rem; color:#3498db; margin-bottom:8px;"><%= exp.position %></div>
            <% if (exp.responsibilities && exp.responsibilities.length > 0) { %>
              <ul style="margin:0 0 0 15px; padding:0; color:#34495e; font-size:0.9rem; line-height:1.6;">
                <% exp.responsibilities.forEach(r => { %>
                  <li contenteditable="true" style="margin-bottom:5px;"><%= r %></li>
                <% }); %>
              </ul>
            <% } else { %>
              <ul style="margin:0 0 0 15px; padding:0; color:#34495e; font-size:0.9rem; line-height:1.6;">
                <li contenteditable="true" style="margin-bottom:5px;">Key responsibility or achievement</li>
                <li contenteditable="true" style="margin-bottom:5px;">Quantifiable results if possible (e.g., "Increased sales by 20%")</li>
              </ul>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">EXPERIENCE</h3>
        <div style="margin-bottom:20px;">
          <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
            <div contenteditable="true" style="font-weight:600; font-size:1rem; color:#2c3e50;">Company Name</div>
            <div contenteditable="true" style="font-size:0.9rem; color:#7f8c8d;">2020 - Present</div>
          </div>
          <div contenteditable="true" style="font-weight:600; font-size:0.95rem; color:#3498db; margin-bottom:8px;">Your Position</div>
          <ul style="margin:0 0 0 15px; padding:0; color:#34495e; font-size:0.9rem; line-height:1.6;">
            <li contenteditable="true" style="margin-bottom:5px;">Key responsibility or achievement</li>
            <li contenteditable="true" style="margin-bottom:5px;">Quantifiable results if possible (e.g., "Increased sales by 20%")</li>
          </ul>
        </div>
      </div>
    <% } %>

    <% if (resumeData.education && resumeData.education.length > 0) { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">EDUCATION</h3>
        <% resumeData.education.forEach(edu => { %>
          <div style="margin-bottom:15px;">
            <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
              <div contenteditable="true" style="font-weight:600; font-size:1rem; color:#2c3e50;"><%= edu.school %></div>
              <div contenteditable="true" style="font-size:0.9rem; color:#7f8c8d;"><%= edu.date %></div>
            </div>
            <div contenteditable="true" style="font-weight:600; font-size:0.95rem; color:#3498db; margin-bottom:5px;"><%= edu.degree %></div>
            <% if (edu.major) { %>
              <div contenteditable="true" style="font-size:0.9rem; color:#34495e; line-height:1.5;"><%= edu.major %></div>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">EDUCATION</h3>
        <div style="margin-bottom:15px;">
          <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
            <div contenteditable="true" style="font-weight:600; font-size:1rem; color:#2c3e50;">University Name</div>
            <div contenteditable="true" style="font-size:0.9rem; color:#7f8c8d;">2016 - 2020</div>
          </div>
          <div contenteditable="true" style="font-weight:600; font-size:0.95rem; color:#3498db; margin-bottom:5px;">Degree Name</div>
          <div contenteditable="true" style="font-size:0.9rem; color:#34495e; line-height:1.5;">Major or specialization</div>
        </div>
      </div>
    <% } %>

    <% if (resumeData.projects && resumeData.projects.length > 0) { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">PROJECTS</h3>
        <% resumeData.projects.forEach(project => { %>
          <div style="margin-bottom:15px;">
            <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
              <div contenteditable="true" style="font-weight:600; font-size:1rem; color:#2c3e50;"><%= project.name %></div>
              <% if (project.date) { %>
                <div contenteditable="true" style="font-size:0.9rem; color:#7f8c8d;"><%= project.date %></div>
              <% } %>
            </div>
            <% if (project.technologies) { %>
              <div contenteditable="true" style="font-size:0.85rem; color:#7f8c8d; margin-bottom:5px; font-style:italic;">
                <%= project.technologies %>
              </div>
            <% } %>
            <% if (project.details && project.details.length > 0) { %>
              <ul style="margin:0 0 0 15px; padding:0; color:#34495e; font-size:0.9rem; line-height:1.6;">
                <% project.details.forEach(detail => { %>
                  <li contenteditable="true" style="margin-bottom:5px;"><%= detail %></li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div style="margin-bottom:25px;">
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">PROJECTS</h3>
        <div style="margin-bottom:15px;">
          <div style="display:flex; justify-content:space-between; margin-bottom:5px;">
            <div contenteditable="true" style="font-weight:600; font-size:1rem; color:#2c3e50;">Project Name</div>
            <div contenteditable="true" style="font-size:0.9rem; color:#7f8c8d;">2023</div>
          </div>
          <div contenteditable="true" style="font-size:0.85rem; color:#7f8c8d; margin-bottom:5px; font-style:italic;">Technologies used</div>
          <ul style="margin:0 0 0 15px; padding:0; color:#34495e; font-size:0.9rem; line-height:1.6;">
            <li contenteditable="true" style="margin-bottom:5px;">Project description and your contributions</li>
            <li contenteditable="true" style="margin-bottom:5px;">Results or outcomes achieved</li>
          </ul>
        </div>
      </div>
    <% } %>

    <% if (resumeData.achievements && resumeData.achievements.length > 0) { %>
      <div>
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">ACHIEVEMENTS</h3>
        <ul style="margin:0 0 0 15px; padding:0; color:#34495e; font-size:0.9rem; line-height:1.6;">
          <% resumeData.achievements.forEach(achievement => { %>
            <li contenteditable="true" style="margin-bottom:8px;"><%= achievement %></li>
          <% }); %>
        </ul>
      </div>
    <% } else { %>
      <div>
        <h3 contenteditable="true" style="font-weight:700; color:#2c3e50; font-size:1.2rem; margin-bottom:15px; padding-bottom:5px; border-bottom:1px solid #ecf0f1;">ACHIEVEMENTS</h3>
        <ul style="margin:0 0 0 15px; padding:0; color:#34495e; font-size:0.9rem; line-height:1.6;">
          <li contenteditable="true" style="margin-bottom:8px;">Notable achievement or award</li>
          <li contenteditable="true" style="margin-bottom:8px;">Recognition or special accomplishment</li>
        </ul>
      </div>
    <% } %>
  </div>
</div>